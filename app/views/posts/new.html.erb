<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <ul style="color:red">
      <li><%= error %></li>
    </ul>
  <% end %>
<% end %>


<%= simple_form_for @post do |f| %>
  <%= f.input :user_id, collection: [[current_user.email,current_user.id]]%>  
  <%= f.label :Title %>
  <%= f.input_field :title %><br><br>
  <%= f.label :Description %>
  <%= f.input_field :body %><br><br>
  <%= f.label :Publish %>
  <%= f.input_field :publish %><br><br>
  <%= f.label :Coverpicture%>
  <%= f.file_field :cover_filename %> <br>
  <%= f.button :submit %>
<% end %>